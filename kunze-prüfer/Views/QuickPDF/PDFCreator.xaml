<Window x:Class="kunze_prüfer.Views.QuickPDF.PDFCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:kunze_prüfer.Views.QuickPDF"
        mc:Ignorable="d"
        Title="PDFCreator" Height="650" Width="1000" Background="#faf4ed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.RowSpan="2" Margin="6, 6, 6, 0" Background="White">
            <ListBox Height="545" BorderThickness="1" x:Name="ListBox_Rechnungspos">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                        </Style.Resources>
                    </Style>                
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" x:Name="StackPanelTemplate">
                            <Image Source="/Media/Icons/invoice-item-52.png" RenderOptions.BitmapScalingMode="HighQuality" Width="20" Stretch="Fill" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="BtnPosAdd" Margin="0,6,0,0" Click="BtnPosAdd_OnClick">Position Hinzufügen</Button>
        </StackPanel>

        <Grid Grid.Row="2" Grid.ColumnSpan="2" >
        </Grid>
            <ToolBarTray Grid.Row="0" Grid.Column="1" DockPanel.Dock="Top" Height="20">
                <ToolBar>
                    <ComboBox Width="110" Text="Vorlage wählen">
                        <ComboBoxItem> Rechnung </ComboBoxItem>
                        <ComboBoxItem> Angebot </ComboBoxItem>
                        <ComboBoxItem> Test </ComboBoxItem>
                    </ComboBox>
                </ToolBar>
                <ToolBar>
                    <Button> Textbausteine Wählen </Button>
                    <ToggleButton> Belegansicht </ToggleButton>
                </ToolBar>
            </ToolBarTray>
        
        <Grid Grid.Row="1" Grid.Column="1" Background="White">
            <ListView x:Name="ListView" BorderThickness="1" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Position" DisplayMemberBinding="{Binding Rechnungs_pos}" Width="50" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Artikelname}" Width="350"/>
                        <GridViewColumn Header="Menge" DisplayMemberBinding="{Binding Artikel_menge}" Width="55" />
                        <GridViewColumn Header="E-Preis" DisplayMemberBinding="{Binding Artikel_einzel_preis}" Width="80" />
                        <GridViewColumn Header="G-Preis" DisplayMemberBinding="{Binding Artikel_gesamt_preis}" Width="80" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button> Drucken </Button>
                <Button> Speichern </Button>
                <Button> Löschen </Button>
                <Button> Schließen </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
