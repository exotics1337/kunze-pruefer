<UserControl x:Class="kunze_prüfer.Views.Auftragsverwaltung.DBSichten.Zahlungseingang"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:kunze_prüfer.Views.Auftragsverwaltung.DBSichten"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="680">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <GroupBox Height="145" Margin="15,15,15,15" VerticalAlignment="Top" Header="Rechnungsdetails">
                    <StackPanel >
                        <TextBlock Text="Zahlungsziel:" FontSize="10" Margin="5" Foreground="#848484"/>                
                        <TextBlock Text="01.01.2000" FontSize="18" Margin="5" FontWeight="Light" />
                        <CheckBox Margin="0,10,0,0">Zahlung ist eingegangen</CheckBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
