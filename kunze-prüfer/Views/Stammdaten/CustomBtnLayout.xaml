<UserControl x:Class="kunze_prüfer.Views.Stammdaten.CustomBtnLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:kunze_prüfer.Views.Stammdaten"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="690">
    <Grid>
        <StackPanel Background="#F8F4F4" Orientation="Horizontal">
            <Button Width="120" Height="30" x:Name="Refresh_btn" Click="Refresh_btn_OnClick" Margin="10">Refresh</Button>
            <Button Width="120" Height="30" x:Name="Update_btn" Click="Update_btn_OnClick" Margin="10">Update</Button>
            <Button Width="120" Height="30" x:Name="Search_btn" Click="Search_btn_OnClick" Margin="10">Suche</Button>
        </StackPanel>
    </Grid>
</UserControl>
