<adonisControls:AdonisWindow 
        x:Class="kunze_prüfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kunze_prüfer"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        PlaceTitleBarOverContent="True">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding TitleBarActualHeight, RelativeSource={RelativeSource AncestorType={x:Type adonisControls:AdonisWindow}}}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Background="#FFF0F0F0" Grid.RowSpan="2">
            <StackPanel Grid.Column="0" Orientation="Vertical" Grid.Row="1" Margin="0,35,0,0" Height="1000">
                <TextBlock Style="{StaticResource NavGroupHeader}">PRÜFUNG</TextBlock>
                <TextBlock MouseDown="navItem_1_MouseDown" x:Name="navItem_1" Style="{StaticResource NavItem}">Option 1</TextBlock>
                <TextBlock MouseDown="navItem_2_MouseDown" x:Name="navItem_2" Style="{StaticResource NavItem}">Option 2</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavGroupHeader}">RECHNUNG</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavGroupHeader}">STAMMDATEN</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
                <TextBlock Style="{StaticResource NavItem}">Option N</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</adonisControls:AdonisWindow>
